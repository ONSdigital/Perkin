<?xml version="1.0" encoding="utf-8"?>

<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">


  <!-- defines the layout master -->
  <fo:layout-master-set>
    <fo:simple-page-master master-name="first"
                           page-height="29.7cm"
                           page-width="21cm"
                           margin-top="1cm"
                           margin-bottom="2cm"
                           margin-left="2.5cm"
                           margin-right="2.5cm">
      <fo:region-body margin-top="3cm"/>
      <fo:region-before extent="3cm"/>
      <fo:region-after extent="1.5cm"/>
    </fo:simple-page-master>
  </fo:layout-master-set>

  <!-- starts actual layout -->
  <fo:page-sequence master-reference="first">

  <fo:flow flow-name="xsl-region-body">

      <!-- this defines a title level 1-->
      <fo:block font-size="18pt"
            font-family="sans-serif"
            line-height="24pt"
            space-after.optimum="15pt"
            background-color="blue"
            color="white"
            text-align="center"
            padding-top="3pt">
      Monthly Business Survey - Retail Sales Index
      </fo:block>


    <!-- survey info -->
    <fo:table table-layout="fixed" width="100%" border-collapse="separate">
      <fo:table-column column-width="50mm"/>
      <fo:table-column column-width="75mm"/>
      <fo:table-body>
        <fo:table-row>
          <fo:table-cell ><fo:block>Form type</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="blue">$formType$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Respondent</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="blue">$ruRef$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Submitted date</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="blue">$submittedAt$</fo:block></fo:table-cell>
        </fo:table-row>
      </fo:table-body>
    </fo:table>

    <!-- comments -->
          <!-- this defines a title level 1-->
          <fo:block font-size="16pt"
                font-family="sans-serif"
                line-height="20pt"
                space-after.optimum="15pt"
                background-color="blue"
                color="white"
                text-align="center"
                padding-top="3pt">
          Comments
          </fo:block>

    <fo:block text-align="start">Please explain any movements in your data e.g. sale held, branches opened or sold, extreme weather, or temporary closure of shop</fo:block>
    <fo:block text-align="start" color="green">$146$</fo:block>

    <!-- answers -->
          <!-- this defines a title level 1-->
          <fo:block font-size="16pt"
                font-family="sans-serif"
                line-height="20pt"
                space-after.optimum="15pt"
                background-color="blue"
                color="white"
                text-align="center"
                padding-top="3pt">
          Answers
          </fo:block>

    <fo:table table-layout="fixed" width="100%" border-collapse="separate">
      <fo:table-column column-width="120mm"/>
      <fo:table-column column-width="40mm"/>
      <fo:table-body>

        <fo:table-row>
            <fo:table-cell ><fo:block>1. Period</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>From</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$11$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>To</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$12$</fo:block></fo:table-cell>
        </fo:table-row>

<fo:table-row>
<fo:table-cell ><fo:block>.</fo:block></fo:table-cell>
</fo:table-row>

        <fo:table-row>
            <fo:table-cell ><fo:block>2. Commodities - retail turnover</fo:block></fo:table-cell>
            <fo:table-cell ><fo:block>Â£ (omit pence)</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Food</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$22$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Alcohol, Confectionary and Tobacco</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$23$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Clothing and Footwear</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$24$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Household goods</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$25$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Other Goods</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$26$</fo:block></fo:table-cell>
        </fo:table-row>
        <fo:table-row>
          <fo:table-cell ><fo:block>Total Retail Sales</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$20$</fo:block></fo:table-cell>
        </fo:table-row>

<fo:table-row>
<fo:table-cell ><fo:block>.</fo:block></fo:table-cell>
</fo:table-row>

        <fo:table-row>
          <fo:table-cell ><fo:block>3. Of these figures, how much were from internet sales?</fo:block></fo:table-cell>
          <fo:table-cell ><fo:block color="green">$21$</fo:block></fo:table-cell>
        </fo:table-row>

      </fo:table-body>
    </fo:table>

    </fo:flow>
  </fo:page-sequence>
</fo:root>
